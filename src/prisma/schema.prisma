model Product {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  name      String
  price     Float
  userId    Int
  user      User      @relation(fields: [userId], references: [id])
}

model User {
  id        Int       @id @default(autoincrement())
  createdAt DateTime  @default(now())
  email     String    @unique
  name      String?
  password  String
  products  Product[]
}
