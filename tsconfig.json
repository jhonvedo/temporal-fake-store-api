{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "src",
        "outDir": "dist",
    },
    "include": [
        "src/**/*.ts",
        "app.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}